{
    "name": "brickx/maintenance-switch",
    "description": "Simple plugin to toggle maintenance mode from Filament Panels.",
    "keywords": [
        "Brickx",
        "laravel",
        "maintenance-switch"
    ],
    "homepage": "https://github.com/brickx/maintenance-switch",
    "support": {
        "issues": "https://github.com/brickx/maintenance-switch/issues",
        "source": "https://github.com/brickx/maintenance-switch"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Keysaw",
            "email": "keysaw@brickx.fr",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "filament/filament": "^3.0",
        "spatie/laravel-package-tools": "^1.15.0",
        "illuminate/contracts": "^10.0"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^7.9",
        "orchestra/testbench": "^8.0",
        "pestphp/pest": "^2.0",
        "pestphp/pest-plugin-arch": "^2.0",
        "pestphp/pest-plugin-laravel": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Brickx\\MaintenanceSwitch\\": "src/",
            "Brickx\\MaintenanceSwitch\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Brickx\\MaintenanceSwitch\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@php ./vendor/bin/testbench package:discover --ansi",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Brickx\\MaintenanceSwitch\\MaintenanceSwitchServiceProvider"
            ],
            "aliases": {
                "MaintenanceSwitch": "Brickx\\MaintenanceSwitch\\Facades\\MaintenanceSwitch"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}